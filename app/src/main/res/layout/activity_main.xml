<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.JaleesMukarramGame.FightingWithCorona.CustomViews.CoronaView
        android:id="@+id/CVVMainActivityCoronaVirusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ADVMainActivityBannerAddTop"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />

    <com.google.android.gms.ads.AdView

        android:id="@+id/ADVMainActivityBannerAddTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1114273220063566/4022635482" />


</RelativeLayout>